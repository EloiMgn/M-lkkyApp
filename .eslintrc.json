{
  "env": {
    "browser": true,
    "node": false,
    "es2021": true,
    "jest": true
},
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime"
  ],
  "plugins": [
    "react", 
    "import"
  ],

  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "rules": {
    "react/prop-types": 0,
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-multiple-empty-lines": ["error", {"max": 2, "maxEOF": 0}],
    "indent": ["error", 2],
    "no-trailing-spaces": ["error"],
    "no-unused-vars": ["warn"],
    "import/no-unresolved": 0
  }
}